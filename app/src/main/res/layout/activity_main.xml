<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên của bạn: " />

        <EditText
            android:id="@+id/edtTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập tên của bạn vào đây" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh" />

        <EditText
            android:id="@+id/edtNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập ngày sinh vào đây" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính" />

        <RadioGroup
            android:id="@+id/rdgGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rdbNam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:layout_weight="1"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/rdbNu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:layout_weight="1"
                />

        </RadioGroup>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích của bạn" />

        <RadioGroup
            android:id="@+id/rdgSoThich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cbPhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem phim"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbNhac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nghe nhạc"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbCafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đi cafe với bạn bè"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbONha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ở nhà một mình"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbNauAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vào bếp nấu ăn"
                android:layout_weight="1"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích khác: " />

        <EditText
            android:id="@+id/edtSTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập sở thích khác" />

        <Button
            android:id="@+id/btXacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÁC NHẬN"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/txtKQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:gravity="bottom"
            android:layout_gravity="bottom"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>